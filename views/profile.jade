extends pretty
- var comics_js = JSON.stringify(comics)

block content
	form(ng-init="comics=#{comics_js}")
	h1.bannertext= Profile 
	h2 #{username} 
	p
		img(src='/accounts/#{username}/avatar' width=196 border=12)
	
	p Description: #{description}
	p Name: #{name}
	p Email: #{email}
	p Location: #{location}
	p link: 
		a(href='#{link}') #{link}
	if (shouldShowSubscription == true) 
		p Subscriptions: #{subscriptions}
