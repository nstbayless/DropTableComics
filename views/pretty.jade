extends layout

block content_layout
  ul.headerbar
    li.headerlink
      a(href="/pretty/create") + Create Comic
    li.headerlink
      a(href="/pretty/") Comics Dashboard
    ul.headerright
      li.headerlink(ng-show="!authenticated")
        a(href="/auth/login")  Sign In
      li.headerlink(ng-show="authenticated")
        a(href="/") {{username}}
      li.headerlink(ng-show="authenticated")
        a(ng-click="logout()" href="") Sign Out
      li.headerlink
        input(type=text, value="Search...", onkeypress="searchKeypress(event);" onfocus="searchFocusClear();").search#search
      li.headerlink
        a(href="javascript:searchSubmit();").lowpad
          img(src="/images/headerbar_icon_search.png" alt="Search")
  block content
