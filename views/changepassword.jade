extends pretty
- var comics_js = JSON.stringify(comics)

block content
	form(ng-init="comics=#{comics_js}")
	h1.bannertext Change Password
	form(method='post', enctype='multipart/form-data', action='/changepassword')

		p Password
			input(type="password" name="password" placeholder="Enter New Password...")

		p Confirm Password
			input(type="password" name="confirmpass" placeholder="Confirm Password...")

		p Old Password
			input(type="password" name="oldpass" placeholder="Enter Old Password...")

		p
			input(type='submit')