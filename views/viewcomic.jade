extends pretty

block content
	h1.bannertext=comic_name
	if (description)
		p
			i= description
	if (editable)
		p
			a(href="/accounts/" + comic_creator + "/comics/" + comic_uri + "/edit" ) Edit
	each pic, i in panels
		p
			img(src= "/accounts/"+comic_creator+"/comics/"+comic_uri+"/panels/"+pic, alt="panel "+i)
	p
		a.share(ng-href="#share" ng-click="shlink='#{share_link}'")
			img(src="/images/icon_share.png" alt="share")
			| share
		span(ng-show="shlink.length>0")
			input(readonly="readonly" ng-model="shlink" ng-init="")
		
	button(ng-click = "subscribe_comic('#{comic_uri}')" ng-show = "!isartist") Subscribe
	p Collaborators:
		each user, i in editlist
			li
				p #{user}
