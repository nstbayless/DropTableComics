extends pretty

block content
	h1.bannertext Edit #{comic_name}
	if (adminable)
		p
			a(href="/adminpage/"+comic_creator+"/comics/"+comic_uri) Admin Options
	p
		form(method='post', enctype='multipart/form-data', action= '/' + comic_creator + '/comics/' + comic_uri+"/panels")
			input(type='file', name='image' id='image_upload')
			input(type='submit')
	each pic, i in panels
		p
			img(src= "/"+comic_creator+"/comics/"+comic_uri+"/panels/"+pic, alt="panel "+i)
